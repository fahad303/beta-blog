<%= render 'shared/errors', obj: @article %>
<div class="row">
    <div class="col-xs-12 col-md-offset-2">
<%= form_for(@article, :html=> {class: 'form-horizental', role: 'form' }) do |f| %>
    <div class="form-group">
        <div class="control-label col-sm-12">
            <%= f.label :Name %>
        </div>
        <div class="col-md-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Article Name" %>
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-sm-12">
            <%= f.label :Description %>
        </div>
        <div class="col-md-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Body" %>
        </div>
    </div></br>
    <div class="form-group">
        <div class="control-label col-sm-12">
            <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
    </div>
<% end %>
<div class="form-group">
        <div class="control-label col-sm-12 col-md-offset-4">
[<%= link_to "Back to Articles", articles_path %>]
</div>
</div>
    </div>
</div>